{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/man-16.png",
    "128": "images/man-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "bookmarks",
    "activeTab",
    "activityLogPrivate",
    "bookmarks",
    "browsingData",
    "history",
    "input",
    "inputMethodPrivate",
    "sessions",
    "tabCapture",
    "topSites",
    "webNavigation",
    "<all_urls>"
  ],
  "commands" : {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space",
        "windows": "Ctrl+Shift+Space",
        "mac": "Ctrl+Shift+Space"
      }
    },
    "_execute_page_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space",
        "windows": "Ctrl+Shift+Space",
        "mac": "Ctrl+Shift+Space"
      }
    }
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "omnibox": {
    "keyword": "OMNIBOX-KEYWORD"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/man-19.png",
      "38": "images/man-38.png"
    },
    "default_title": "spotlight",
    "default_popup": "popup.html"
  }
}
